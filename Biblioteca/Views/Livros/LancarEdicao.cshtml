@model Biblioteca.Models.PublicacaoViewModel

@{
    ViewData["Title"] = "Cadastrar Edição";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="SalvarPublicacao" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="EditoraId" class="control-label">Editora</label>
        <select asp-for="EditoraId" asp-items="@Model.Editoras" class="form-control">
            <option value="">Selecione uma Editora</option>
        </select>
        <span asp-validation-for="EditoraId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LivroId" class="control-label">Livro</label>
        <select asp-for="LivroId" asp-items="@Model.Livros" class="form-control">
            <option value="">Selecione um Livro</option>
        </select>
        <span asp-validation-for="LivroId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Edicao" class="control-label">Edição</label>
        <input asp-for="Edicao" class="form-control" type="number" step="1" />
        <span asp-validation-for="Edicao" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DataPublicacao" class="control-label">Data de Publicação (Ano)</label>
        <input asp-for="DataPublicacao" class="form-control" type="number" step="1" />
        <span asp-validation-for="DataPublicacao" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Salvar Publicação" class="btn btn-primary" />
    </div>
</form>